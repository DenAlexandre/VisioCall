<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pm="clr-namespace:VisioCall.Maui.PageModels"
             xmlns:models="clr-namespace:VisioCall.Shared.Models;assembly=VisioCall.Shared"
             xmlns:local="clr-namespace:VisioCall.Maui.Models"
             x:Class="VisioCall.Maui.Pages.HomePage"
             x:DataType="pm:HomePageModel"
             Title="VisioCall">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="5">

            <Label Text="{Binding CurrentUserName, StringFormat='Connected as {0}'}"
                   FontSize="14" TextColor="Gray" Margin="0,10,0,0" />

            <!-- Online Users -->
            <Label Text="Online Users" FontSize="22" FontAttributes="Bold" Margin="0,5" />

            <CollectionView ItemsSource="{Binding OnlineUsers}"
                            EmptyView="No users online">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:UserInfo">
                        <Frame Padding="15" Margin="0,5" CornerRadius="8"
                               BorderColor="LightGray" HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout>
                                    <Label Text="{Binding DisplayName}" FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding UserId}" FontSize="13" TextColor="Gray" />
                                </VerticalStackLayout>
                                <Button Grid.Column="1" Text="Call"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type pm:HomePageModel}}, Path=CallUserCommand}"
                                        CommandParameter="{Binding .}"
                                        WidthRequest="80" HeightRequest="40"
                                        Padding="5" FontSize="14" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Refresh"
                    Command="{Binding LoadUsersCommand}"
                    Margin="0,10" />

            <!-- Call History -->
            <BoxView HeightRequest="1" Color="LightGray" Margin="0,5" />

            <Label Text="Call History" FontSize="22" FontAttributes="Bold" Margin="0,10" />

            <CollectionView ItemsSource="{Binding CallHistory}"
                            EmptyView="No call history">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:CallHistoryEntry">
                        <Frame Padding="12" Margin="0,4" CornerRadius="8"
                               BorderColor="LightGray" HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0" FontSize="18" VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsOutgoing}" Value="True">
                                            <Setter Property="Text" Value="&#x2197;" />
                                            <Setter Property="TextColor" Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsOutgoing}" Value="False">
                                            <Setter Property="Text" Value="&#x2199;" />
                                            <Setter Property="TextColor" Value="Blue" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <VerticalStackLayout Grid.Column="1">
                                    <Label Text="{Binding DisplayName}" FontSize="16" FontAttributes="Bold" />
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="{Binding Timestamp, StringFormat='{0:dd/MM HH:mm}'}"
                                               FontSize="12" TextColor="Gray" />
                                        <Label Text="{Binding DurationSeconds, StringFormat='{0}s'}"
                                               FontSize="12" TextColor="Gray" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                                <Button Grid.Column="2" Text="Recall"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type pm:HomePageModel}}, Path=RecallCommand}"
                                        CommandParameter="{Binding .}"
                                        WidthRequest="80" HeightRequest="40"
                                        Padding="5" FontSize="13" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="{Binding StatusMessage}"
                   TextColor="Gray" FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,5" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
